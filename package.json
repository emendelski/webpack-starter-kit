{
  "name": "webpack-starter-kit",
  "version": "1.0.0",
  "description": "Starter Kit for every-day frontend work",
  "author": "Kamil Mendelski <kontakt@frontlabs.pl>",
  "repository": {
    "type": "git",
    "url": "https://github.com/emendelski/webpack-starter-kit.git"
  },
  "bugs": {
    "url": "https://github.com/emendelski/webpack-starter-kit/issues"
  },
  "scripts": {
    "lint": "eslint --ext .js src",
    "previews": "cross-env NODE_ENV=dev webpack-dev-server --content-base previews/ --progress --mode development",
    "dev": "cross-env NODE_ENV=dev webpack-dev-server --progress --mode development",
    "build": "webpack -p --progress --mode production",
    "deploy": "npm run build && node deploy",
    "deploy:php": "npm run build && node deploy php"
  },
  "private": true,
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "babel-core": "^6.26.3",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.2",
    "babel-preset-env": "^1.7.0",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.1.5",
    "css-loader": "^1.0.0",
    "eslint": "^5.6.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-import": "^2.13.0",
    "file-loader": "^2.0.0",
    "ftp-deploy": "^2.1.2",
    "html-loader": "^0.5.5",
    "image-webpack-loader": "^4.3.1",
    "imagemin-webpack-plugin": "^2.1.5",
    "mini-css-extract-plugin": "^0.4.2",
    "node-sass": "^4.9.3",
    "npm": "^6.4.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "stylelint": "^9.3.0",
    "stylelint-config-airbnb": "0.0.0",
    "stylelint-order": "^1.0.0",
    "stylelint-scss": "^3.1.3",
    "stylelint-webpack-plugin": "^0.10.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "parserOptions": {
      "ecmaFeatures": {
        "modules": true
      }
    },
    "env": {
      "browser": true,
      "es6": true,
      "jquery": true
    }
  },
  "eslintIgnore": [
    "./dist/*"
  ],
  "stylelint": {
    "extends": "stylelint-config-airbnb",
    "rules": {
      "max-nesting-depth": [
        3,
        {
          "ignore": [
            "blockless-at-rules"
          ],
          "ignoreAtRules": [
            "include",
            "media"
          ]
        }
      ],
      "at-rule-empty-line-before": [
        "always",
        {
          "except": [
            "blockless-after-same-name-blockless"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    }
  }
}
